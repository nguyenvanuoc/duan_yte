
@{
    ViewBag.Title = "backup Database";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="sidebar-menu">
        @Html.Partial("Leftmenu")
    </div>
    <div class="main-content">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="col-md-7 col-sm-offset-2">
                    <div class="input-group">
                        <div class="icon-addon addon-md">
                            <input type="text" placeholder="Nhập thông tin đường dẫn để backuo Database" value="@ViewBag.file" width="500" title="Nhập thông tin đường dẫn để backuo Database" class="form-control" id="url">
                        </div>
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="button" id="guiemail">
                                <i class="fa fa-database  "></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

    $(document).ready(function () {

    });



    $("#guiemail").click(function () {
        var email = $("#email").val();
        if (email == "") {
            Msg.Warning("Chưa chọn email phục hồi ");
            return false;
        }
        waitingDialog.show();

        b_url = $("#url").val();

        $.post("@Core.Constants.Config.GetBaseUrl()/api/Vanbans/Backup?url=" + b_url)
            .done(function (b_kq) {
                try {
                    Msg.Warning(b_kq);
                    waitingDialog.hide();
                } catch (e) {
                    waitingDialog.hide();
                }
            })
            .fail(function (a, b) {
                Emcsoft.Msg.show("Có lỗi khi lưu thông tin: Chi tiết lỗi " + a.responseJSON.Message);
                waitingDialog.hide();
            });

            });

    </script>


