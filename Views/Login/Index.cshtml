@model Pkham.Data.Model.Nguoisudung
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập hệ thống</title>
    <meta content="IE=edge" http-equiv="X-UA-Compatible"></meta>
    <meta content="IE=edge" http-equiv="X-UA-Compatible"></meta>
    <meta content="index, follow" name="ROBOTS">
    <meta content="width=device-width, initial-scale=1" name="viewport" id="viewport"></meta>

    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/ap.css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/login.min.css")

    
    

</head>
<body>

    <div class="login-canvas">
        <div class="bg">
            
        </div>
        <div class="logo">
            <img src="~/Content/images/logo-white.svg" alt="">
        </div>
        <div id="loginbox" class="login-form panel">
            <div class="panel-heading">
                <div class="panel-title">Đăng nhập hệ thống</div>
                
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Dangnhaphethong", "Login"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                    <div class="form-group">
                        <div class="input">
                            <i class="icon icon-user6 -ap"></i>
                            @Html.TextBoxFor(m => m.nsd, new { @class = "form-control", @autofocus = "true",  @placeholder = "Nhập thông tin người dùng" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input">
                            <i class="icon icon-uniF148 -ap"></i>
                            @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control", @placeholder = "Nhập thông tin mật khẩu" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="check-action">
                            @Html.CheckBoxFor(m => m.Remember)
                            <span class="icon"></span>
                            <label class="name">
                                Nhớ đăng nhập lần sau
                            </label>
                        </div>
                    </div>
                    <div class="actions">
                        <button class="btn btn-submit" type="submit">Đăng nhập</button>
                    </div>

                    
                }
                <div class="bottom">
                    <div class="note">Don't have an account?</div>
                    <!-- <button class="btn btn-reg">Đăng ký tài khoản</button> -->
                </div>
            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/Lib")
</html>
