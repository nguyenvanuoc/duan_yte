<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Trang chủ</title>

    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @using Pkham.Data.Model;
    @using System.Data;

    @{
        DataTable tableMenuNgang = new DataTable();
        Nguoisudung _nsd = (Session["USER_SESSION"] == null ? new Nguoisudung() : (Nguoisudung)Session["USER_SESSION"]);

        Pkham.Data.Hethong hethong = new Pkham.Data.Hethong();

        if (!string.IsNullOrEmpty(_nsd.nsd))
        {
            tableMenuNgang = hethong.DanhsachMenuNgang(_nsd.nsd);
        }
    }
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div style=" padding:5px 8px 5px 10px; ">
                <label style="font-weight:bold; font-size: 18px; box-sizing:border-box; color:gray">HỆ THỐNG QUẢN LÝ PHÒNG KHÁM</label>
                <div style="font-style:normal !important; font-weight:normal !important; font-size:15px; ">
                    <p>@(_nsd.Ten==null? "":_nsd.Ten.ToString().ToUpper())</p>
                </div>
            </div>
        </div>
        <div class="navbar-collapse collapse" style="  margin-top:10px;  ">
            <ul class="nav navbar-nav">
                @foreach (DataRow item in tableMenuNgang.Rows)
                {
                    <li>
                        <a href="@Url.Action(item["Actions"].ToString(),  item["Controller"].ToString())">
                            <i class="c"></i>
                            @item["Ten"].ToString()
                        </a>
                    </li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right" style="margin-top:5px; margin-right:6px;">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw">
                        </i>Xin chào : @_nsd.Tenhienthi  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> Thông tin người dùng</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("Index", "Login", new { loai="out" })">
                                <i class="fa fa-sign-out fa-fw">
                                </i>
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="body-content"  >
       
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - quannm</p>
        </footer>
    </div>

</body>
</html>
